<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AthletesList"
    tools:showIn="@layout/activity_athletes_list"
    android:background="#e4e4e4" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_container"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <android.support.v7.widget.RecyclerView
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:id="@+id/RecycleView_athletes"
            android:layout_margin="10dp"
            android:layout_gravity="center"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>